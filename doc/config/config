[main]
# DB where statistics should be saved
stats_db = stats.db

# Delay between log records (in seconds)
# The lower the number, the more accurate logs will be, but the more system
# load this will cause
# Default: 5
sleep_time = 5

# List of keywords to ignore
# Any window that has any of the keywords in its title will be ignored
ignore_keywords = bank,paypal

# Ignore logging if the user is inactive for X seconds
# Default: 360
user_inactive_threshold = 360

# The format of the strings returned by latte stats
analyzer_output_default = - [%s::%s] "%s" : %s
analyzer_output_title = - "%s": %s
analyzer_output_class = - "%s": %s
analyzer_output_instance = - "%s": %s

# Aliases
aliases = gnome-terminal:Terminal
